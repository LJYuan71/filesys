<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>UploadValidFilter</filter-name>
    <filter-class>tk.ljyuan71.file.filter.FileSysFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UploadValidFilter</filter-name>
    <url-pattern>/FileUploadServlet</url-pattern>
    <url-pattern>/downLoadFile</url-pattern>
    <url-pattern>/removeFile</url-pattern>
    <url-pattern>/removeFileGroup</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>spring-mvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:/spring-mvc.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>spring-mvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FileUploadServlet</servlet-name>
    <servlet-class>tk.ljyuan71.file.servlet.FileUploadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UploadActionServlet</servlet-name>
    <servlet-class>tk.ljyuan71.file.servlet.UploadActionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CheckFileExistServlet</servlet-name>
    <servlet-class>tk.ljyuan71.file.servlet.CheckFileExistServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DownLoadFileServlet</servlet-name>
    <servlet-class>tk.ljyuan71.file.servlet.DownLoadFileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RemoveFileServlet</servlet-name>
    <servlet-class>tk.ljyuan71.file.servlet.RemoveFileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RemoveFileGroupServlet</servlet-name>
    <servlet-class>tk.ljyuan71.file.servlet.RemoveFileGroupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileUploadServlet</servlet-name>
    <url-pattern>/FileUploadServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UploadActionServlet</servlet-name>
    <url-pattern>/UploadActionServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckFileExistServlet</servlet-name>
    <url-pattern>/checkFileExistServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DownLoadFileServlet</servlet-name>
    <url-pattern>/downLoadFile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RemoveFileServlet</servlet-name>
    <url-pattern>/removeFile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RemoveFileGroupServlet</servlet-name>
    <url-pattern>/removeFileGroup</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>